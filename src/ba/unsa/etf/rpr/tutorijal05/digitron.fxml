<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import java.net.URL?>

<?import javafx.scene.layout.RowConstraints?>
<GridPane fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@digitronStyle.css" />
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
    </rowConstraints>

    <children>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="%" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="/" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="x" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="-" GridPane.columnIndex="4" GridPane.rowIndex="1"/>

        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="7" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="8" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="9" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="4" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="5" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="6" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="1" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="2" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="3" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

        <Button onAction="#actionNumber" prefHeight="25.0" prefWidth="Infinity" text="0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="." GridPane.columnIndex="3" GridPane.rowIndex="5"/>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="=" GridPane.columnIndex="4" GridPane.rowIndex="4" GridPane.rowSpan="2"/>
        <Button onAction="#actionOperator" prefHeight="25.0" prefWidth="Infinity" text="+" GridPane.columnIndex="4" GridPane.rowIndex="2" GridPane.rowSpan="2"/>
        <Label value="${controller.valueDisplay}" fx:id="display" prefWidth="Infinity" prefHeight="44.0" text="0" GridPane.columnIndex="1" GridPane.columnSpan="4" />
    </children>
</GridPane>